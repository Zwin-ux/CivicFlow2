# Railway Production Environment Configuration
# This file is optimized for Railway deployment with graceful degradation

# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Demo Mode Configuration (enabled by default for resilience)
DEMO_MODE=true
DEMO_MODE_AUTO_ENABLE=true
DEMO_MODE_MAX_RETRIES=3

# Database Configuration
# Railway will inject DATABASE_URL automatically
# Format: postgresql://user:password@host:port/database
# DATABASE_URL will be set by Railway

# Redis Configuration
# Railway will inject REDIS_URL automatically if Redis is added
# Format: redis://default:password@host:port
# REDIS_URL will be set by Railway

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
BCRYPT_ROUNDS=12

# TLS Configuration
TLS_ENABLED=false

# Key Management
KEY_MANAGEMENT_PROVIDER=local
KEY_ROTATION_DAYS=90

# External Services (Optional - will gracefully degrade if not set)
EIN_VERIFICATION_API_URL=
EIN_VERIFICATION_API_KEY=
USE_MOCK_EIN_VERIFICATION=true

# Email Service (Optional)
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_API_KEY=
EMAIL_FROM=noreply@civicflow.app

# Microsoft Teams Integration (Optional)
TEAMS_CLIENT_ID=
TEAMS_CLIENT_SECRET=
TEAMS_TENANT_ID=
TEAMS_WEBHOOK_SECRET=${TEAMS_WEBHOOK_SECRET}

# Storage (Optional)
STORAGE_PROVIDER=s3
STORAGE_BUCKET=
STORAGE_REGION=us-east-1

# AI Services (Optional - will gracefully degrade if not set)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=
AZURE_DOCUMENT_INTELLIGENCE_KEY=
AZURE_DOCUMENT_INTELLIGENCE_TIMEOUT=30000

# OpenAI/LLM Service (Optional)
LLM_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# AI Service Configuration
AI_CONFIDENCE_THRESHOLD=0.85
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1000

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=${RAILWAY_PUBLIC_DOMAIN}
