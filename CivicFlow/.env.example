# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lending_crm
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
JWT_SECRET=your-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production

# TLS Configuration (for HTTPS)
TLS_ENABLED=false
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key
TLS_CA_PATH=./certs/ca.crt

# Key Management
KEY_MANAGEMENT_PROVIDER=local
KEY_MANAGEMENT_KEY_ID=encryption-key
KEY_ROTATION_DAYS=90

# AWS KMS Configuration (if using aws-kms provider)
AWS_REGION=us-east-1
AWS_KMS_KEY_ID=your-kms-key-id

# Azure Key Vault Configuration (if using azure-keyvault provider)
AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/
AZURE_KEY_VAULT_KEY_NAME=encryption-key

# External Services
EIN_VERIFICATION_API_URL=https://api.example.com/ein
EIN_VERIFICATION_API_KEY=your-api-key
USE_MOCK_EIN_VERIFICATION=true

# Email Service
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@example.com

# Microsoft Teams Integration
TEAMS_CLIENT_ID=your-azure-ad-client-id
TEAMS_CLIENT_SECRET=your-azure-ad-client-secret
TEAMS_TENANT_ID=your-azure-ad-tenant-id
TEAMS_WEBHOOK_SECRET=your-webhook-secret-change-in-production

# Storage
STORAGE_PROVIDER=s3
STORAGE_BUCKET=lending-crm-documents
STORAGE_REGION=us-east-1

# ML Classification Service
ML_CLASSIFICATION_SERVICE_URL=http://localhost:5000
ML_CLASSIFICATION_API_KEY=your-ml-api-key
ML_CLASSIFICATION_TIMEOUT=30000

# Azure AI Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-azure-ai-key
AZURE_DOCUMENT_INTELLIGENCE_TIMEOUT=30000

# OpenAI/LLM Service
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# Claude (Alternative LLM)
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=2000

# AI Service Configuration
AI_CONFIDENCE_THRESHOLD=0.85
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1000

# Logging
LOG_LEVEL=info
