# Docker Environment Configuration
# Copy this file to .env and update with your values

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1
LOG_LEVEL=info

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lending_crm
DB_USER=postgres
DB_PASSWORD=change-this-secure-password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-this-redis-password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=change-this-to-a-random-secret-min-32-characters
JWT_EXPIRES_IN=24h

# Security
ENCRYPTION_KEY=change-this-to-a-random-key-min-32-characters

# Storage Configuration
STORAGE_PROVIDER=local
STORAGE_BUCKET=lending-crm-documents
STORAGE_REGION=us-east-1

# AWS Configuration (if using S3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Azure Configuration (if using Azure Blob)
# AZURE_STORAGE_ACCOUNT=your-account-name
# AZURE_STORAGE_KEY=your-storage-key

# CORS Configuration (production)
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
